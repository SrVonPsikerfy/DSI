<Page
    x:Class="DSIProyectoFinal.Abilities"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSIProyectoFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light">

    <Page.Resources>
        <!-- In this example, the ListView's ItemTemplate property is bound to a data template (shown below)
called StyledGridTemplate, defined in the Page.Resources section of the XAML file.

The data template is defined to display a CustomDataObject object (same type as in above sample). -->

        <DataTemplate x:Name="ImageOverlayTemplate" x:DataType="local:Knights">
            <Grid Width="100">
                <Image Source="{x:Bind ImageLocation}" Stretch="UniformToFill"/>
                <StackPanel Orientation="Vertical" Height="40" VerticalAlignment="Bottom" Padding="5,1,5,1"
                    Background="LightGray" Opacity=".75">
                    <TextBlock Text="{x:Bind Name}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <!--BACK BUTTON-->
        <Button Background="SandyBrown"
                Width="Auto"
                Height="50"
                HorizontalAlignment="Stretch">
            <TextBlock Text="BACK"
                       FontSize="30"
                       Width="Auto"/>
        </Button>

        <StackPanel Grid.Column="5"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Right"
                       VerticalAlignment="Stretch"
                   Text="KotF"
                   FontSize="48" FontWeight="Bold"/>
            <Button Background="SkyBlue"
                    Width="Auto"
                    Height="Auto"
                    HorizontalAlignment="Stretch"
                    FontStretch="Expanded">
                <TextBlock Text="KNIGHTS"
                           IsTextScaleFactorEnabled="True"
                           FontSize="30"
                           FontWeight="Bold"
                           FontStretch="Expanded"
                           Width="Auto"/>
            </Button>
        </StackPanel>

        <!-- The GridView used for this example is shown below. Setter properties are used to customize
        some parts of the GridViewItems (i.e. the margins). -->
        <GridView
            Grid.Row="1"
            Grid.ColumnSpan="2"
            x:Name="StyledGrid"
            ItemTemplate="{StaticResource ImageOverlayTemplate}">

            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="31, 15, 31, 15"/>
                </Style>
            </GridView.ItemContainerStyle>

            <!-- An extra property also needs to be added to the GridView's ItemsWrapGrid.
    The following sets the maximum # of items to show before wrapping.-->
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                           MaximumRowsOrColumns="3"
                           Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>

        <Grid Grid.Row="1"
              Grid.Column="2">
            
        </Grid>

        <StackPanel Grid.Row="4"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
            <Image Source="/Assets/homeButton.png"
               Grid.Row="2"
               Height="50"
               Width="50"
               Margin="0,0,0,10"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Stretch="Uniform"/>
            <Image Source="/Assets/settingsButton.png"
               Grid.Row="2"
               Height="50"
               Width="50"
               Margin="0,0,0,5"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Stretch="Uniform"/>
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Grid.Column="3"
                   Grid.ColumnSpan="2"
                   Text="POINTS AVAILABLE: "
                   FontSize="30"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <Grid Grid.Row="3"
              Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="DEF (PHY)"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"/>

            <TextBlock Grid.Row="1"
                       Text="DEF (MAG)"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"/>

            <TextBlock Grid.Row="2"
                       Text="RANGE"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"/>

            <TextBlock Grid.Column="1"
                       Text="100"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Grid.Row="1"
                       Text="100"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Grid.Row="2"
                       Text="3"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

        </Grid>

        <Grid Grid.Row="3"
              Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="ATK (PHY)"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"/>

            <TextBlock Grid.Row="1"
                       Text="ATK (MAG)"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"/>

            <TextBlock Grid.Row="2"
                       Text="MANA"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"/>

            <TextBlock Grid.Column="1"
                       Text="100"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Grid.Row="1"
                       Text="100"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Grid.Row="2"
                       Text="10"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

        </Grid>

        <TextBlock Grid.Row="2"
                   Grid.Column="5"
                   Text="SKADI"
                   FontSize="30"
                   FontWeight="Bold"
                   FontStyle="Italic"/>

        <Grid Grid.Row="3"
              Grid.Column="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="LVL 69"
                       FontSize="25*"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Stretch"/>

            <TextBlock Grid.Row="1"
                       Text="Exp. 210/420"
                       FontSize="15"
                       VerticalAlignment="Center"/>

            <ProgressBar Grid.Row="2"
                         Width="130"
                         Value="30"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"/>

        </Grid>


    </Grid>
</Page>
