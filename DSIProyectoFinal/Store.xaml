<Page
    x:Class="DSIProyectoFinal.Store"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSIProyectoFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <DataTemplate x:Key="StoreKnightsTemplate">
            <Grid Height="300" Width="300" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--Imagen-->
                <Image x:Name="ItemImage"
                Source=".Assets/StoreLogo.png" Stretch="Uniform" />

                <StackPanel Orientation="Vertical" Grid.Row="1">
                    <Image Source="./Assets/playIcon.png" HorizontalAlignment="Stretch"
                        AutomationProperties.Name="Atack"  RenderTransformOrigin="0.5,0.5" Height="52" Width="52" />
                    <TextBlock Text="ImageTitle" HorizontalAlignment="Center" 
                               Style="{StaticResource SubtitleTextBlockStyle}" />

                </StackPanel>

            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <!-- Definicion de columnas !-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--lista de compras-->
        <GridView ItemTemplate="{StaticResource StoreKnightsTemplate}" Grid.Row="1" Grid.Column="1">
               
        </GridView>

        <!--BACK BUTTON-->
        <Button Background="SandyBrown" Grid.Row="0" Grid.Column="0"
                Width= "Auto"
                Height="50"
                HorizontalAlignment="Stretch">
            <TextBlock Text="BACK"
                       FontSize="30"
                       Width="Auto"/>
        </Button>
        
        <!--Grid de seleccion de filtros-->
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <!-- Definicion de filas y columnas !-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Colores temporales para ver los iconos (mas tarde la propia imagen tendra el fondo)-->
            <Border Grid.Column ="0" Grid.Row="0" Background="#FF9C9C9C"/>
            <Border Grid.Column ="0" Grid.Row="2" Background="#FF9C9C9C"/>
            <Border Grid.Column ="1" Grid.Row="1" Background="#FF9C9C9C"/>
            <Border Grid.Column ="2" Grid.Row="0" Background="#FF9C9C9C"/>
            <Border Grid.Column ="2" Grid.Row="2" Background="#FF9C9C9C"/>

            <Image Grid.Column="0" Grid.Row="0" Width="Auto" Height="Auto"
            Source="./Assets/melee_class_icon.png"/>

            <Image Grid.Column="2" Grid.Row="0" Width="Auto" Height="Auto"
            Source="./Assets/sniper_class_icon.png"/>

            <Image Grid.Column="1" Grid.Row="1" Width="Auto" Height="Auto"
            Source="./Assets/support_class_icon.png"/>

            <Image Grid.Column="0" Grid.Row="2" Width="Auto" Height="Auto"
            Source="./Assets/defender_class_icon.png"/>

            <Image Grid.Column="2" Grid.Row="2" Width="Auto" Height="Auto"
            Source="./Assets/healer_class_icon.png"/>


        </Grid>
        <!--Home y Settings-->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
            <Button>
                <Image Source="./Assets/homeButton.png"
               Grid.Row="2"
               Height="50"
               Width="50"
               Margin="0,0,0,10"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Stretch="Uniform"/>
            </Button>
            <Button>
                <Image Source="./Assets/settingsButton.png"
               Grid.Row="2"
               Height="50"
               Width="50"
               Margin="0,0,0,5"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Stretch="Uniform"/>
            </Button>
            
        </StackPanel>
        
        <!--Dropdown de para ordenar el GridView-->
        <DropDownButton Grid.Column="2" Grid.Row="0"
                        HorizontalAlignment="Stretch" VerticalAlignment="Center"
                        Height="50" Width="Auto"
                        Content="Order by None"
                        >
            <DropDownButton.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuFlyoutItem Text="Order by None"/>
                    <MenuFlyoutItem Text="Order by Price"/>
                    <MenuFlyoutItem Text="Order by Alphabetical"/>
                </MenuFlyout>
            </DropDownButton.Flyout>

        </DropDownButton>
    </Grid>
</Page>
