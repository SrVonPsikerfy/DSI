<Page
    x:Class="DSIProyectoFinal.TeamSelect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSIProyectoFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light">

    <Grid>
        <!--Definicion de filas y columnas-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <!--Fondo-->
        <Image Grid.ColumnSpan="5" Grid.RowSpan="8"
               Source="./Assets/castle.jpg"
               Stretch="Fill"/>
        
        <!--BACK BUTTON-->
        <Button Background="SandyBrown"
                Width="Auto" Height="50"
                HorizontalAlignment="Stretch"
                Grid.ColumnSpan="2">
            <TextBlock Text="BACK"
                       FontSize="30"
                       Width="Auto"/>
        </Button>


        <!--GRID CON LOS MIEMBROS DEL EQUIPO-->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="30" RowSpacing="30">
            <!--Definicion de filas y columnas-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--MIEMBRO 1-->
            <Button Grid.Column="0" Grid.Row="0">
                <Image Source="./Assets/stick-man-hi.png"/>
            </Button>

            <Image Grid.Column="0" Grid.Row="0" 
                   Source="./Assets/defender_class_icon.png"
                   VerticalAlignment="Top" HorizontalAlignment="Right" Height="70" Width="70"
                   Margin="0,0,20,0"/>

            <!--MIEMBRO 2-->
            <Button Grid.Column="1" Grid.Row="0">
                <Image Source="./Assets/stick-man-hi.png"/>
            </Button>

            <Image Grid.Column="1" Grid.Row="0" 
                   Source="./Assets/defender_class_icon.png"
                   VerticalAlignment="Top" HorizontalAlignment="Right" Height="70" Width="70"
                    Margin="0,0,20,0"/>

            <!--MIEMBRO 3-->
            <Button Grid.Column="2" Grid.Row="0">
                <Image Source="./Assets/stick-man-hi.png"/>
            </Button>

            <Image Grid.Column="2" Grid.Row="0" 
                   Source="./Assets/defender_class_icon.png"
                   VerticalAlignment="Top" HorizontalAlignment="Right" Height="70" Width="70"
                    Margin="0,0,20,0"/>

            <!--MIEMBRO 4-->
            <Button Grid.Column="3" Grid.Row="0">
                <Image Source="./Assets/stick-man-hi.png"/>
            </Button>

            <Image Grid.Column="3" Grid.Row="0" 
                   Source="./Assets/defender_class_icon.png"
                   VerticalAlignment="Top" HorizontalAlignment="Right" Height="70" Width="70"
                    Margin="0,0,20,0"/>

            <!--MIEMBRO 5-->
            <Button Grid.Column="0" Grid.Row="1">
                <Image Source="./Assets/stick-man-hi.png"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <Image Grid.Column="0" Grid.Row="1" 
                   Source="./Assets/defender_class_icon.png"
                   VerticalAlignment="Top" HorizontalAlignment="Right" Height="70" Width="70"
                    Margin="0,0,20,0"/>

            <!--MIEMBRO 6-->
            <Button Grid.Column="1" Grid.Row="1">
                <Image Source="./Assets/stick-man-hi.png"/>
            </Button>

            <Image Grid.Column="1" Grid.Row="1" 
                   Source="./Assets/defender_class_icon.png"
                   VerticalAlignment="Top" HorizontalAlignment="Right" Height="70" Width="70"
                    Margin="0,0,20,0"/>

            <!--MIEMBRO 7-->
            <Button Grid.Column="2" Grid.Row="1">
                <Image Source="./Assets/stick-man-hi.png"/>
            </Button>

            <Image Grid.Column="2" Grid.Row="1" 
                   Source="./Assets/defender_class_icon.png"
                   VerticalAlignment="Top" HorizontalAlignment="Right" Height="70" Width="70"
                    Margin="0,0,20,0"/>

            <!--MIEMBRO 8-->
            <Button Grid.Column="3" Grid.Row="1">
                <Image Source="./Assets/stick-man-hi.png"/>
            </Button>

            <Image Grid.Column="3" Grid.Row="1" 
                   Source="./Assets/defender_class_icon.png"
                   VerticalAlignment="Top" HorizontalAlignment="Right" Height="70" Width="70"
                    Margin="0,0,20,0"/>
        </Grid>

        <!--Indicador de en que menu se esta-->
        <StackPanel Grid.Column="4"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Right"
                       VerticalAlignment="Stretch"
                   Text="KotF"
                   FontSize="48" FontWeight="Bold"/>
            <Button Background="SkyBlue"
                    Width="Auto"
                    Height="Auto"
                    HorizontalAlignment="Stretch"
                    FontStretch="Expanded">
                <TextBlock Text="TEAM SELECT"
                           IsTextScaleFactorEnabled="True"
                           FontSize="30"
                           TextWrapping="Wrap"
                           FontStretch="Expanded"
                           Width="Auto"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="3"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Height="Auto"
                    Width="Auto">

            <Button Content="Equipo 1"
                    FontSize="30"
                    FontWeight="Bold"
                    Width="Auto"
                    Height="Auto"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderThickness="7"
                    BorderBrush="Black"/>

            <Button Content="Equipo 2"
                    Width="Auto"
                    Height="Auto"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="Black" Margin="0,10,0,0"
                    FontSize="30"
                    FontWeight="Bold"/>

            <Button Content="Equipo 3"
                    Width="Auto"
                    Height="Auto"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="Black" Margin="0,10,0,0"
                    FontSize="30"
                    FontWeight="Bold"/>
        </StackPanel>


        <!--BOTON GO-->
        <Button Content="GO!" Grid.Column="0"  Grid.Row="2" Grid.ColumnSpan="3"
                VerticalAlignment="Top" HorizontalAlignment="Center"
                FontSize="30" FontWeight="Bold" Width="450" />

        <!--BOTON HOME Y OPCIONES-->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
            <Button Background="White" BorderThickness="2">
                <Image Source="/Assets/homeButton.png"
                       Grid.Row="2"
                       Height="50"
                       Width="50"
                       Margin="0,0,0,5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Stretch="Uniform"/>
            </Button>
            <Button Background="White" BorderThickness="2">
                <Image Source="/Assets/settingsButton.png"
                       Grid.Row="2"
                       Height="50"
                       Width="50"
                       Margin="0,0,0,5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <!--GRIDVIEW DE MIEMBROS DEL EQUIPO-->


        <!--BOTON A LA PESTAÑA TEAMS-->
        <Button Grid.Row="2" Grid.Column="3"
                Background="DodgerBlue"
                Width="Auto" Height="50"
                HorizontalAlignment="Stretch"
                Grid.ColumnSpan="2">
            <TextBlock Text="TEAMS"
                       FontSize="30"
                       Width="Auto"/>
        </Button>

    </Grid>
</Page>
